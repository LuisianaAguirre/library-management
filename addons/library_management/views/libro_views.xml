<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_libro_list" model="ir.ui.view">
        <field name="name">library_management.libro.list</field>
        <field name="model">library_management.libro</field>
        <field name="arch" type="xml">
            <list>
                <field name="isbn"/>
                <field name="name"/>
                <field name="author"/>
                <field name="publication_date"/>
                <field name="years_since_publication"/>
                <field name="is_available"/>
            </list>
        </field>
    </record>

    <record id="view_libro_form" model="ir.ui.view">
        <field name="name">library_management.libro.form</field>
        <field name="model">library_management.libro</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="isbn"/>
                        <field name="name"/>
                        <field name="author"/>
                        <field name="publication_date"/>
                        <field name="years_since_publication" readonly="1"/>
                        <field name="is_available" readonly="1"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_libro" model="ir.actions.act_window">
        <field name="name">Libros</field>
        <field name="res_model">library_management.libro</field>
        <field name="view_mode">list,form</field>
    </record>

    <menuitem id="menu_libro" name="Libros" parent="menu_library_root" action="action_libro" sequence="20"/>
</odoo>