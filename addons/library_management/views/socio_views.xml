<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="list" model="ir.ui.view">
        <field name="name">library_management.socio.list</field>
        <field name="model">library_management.socio</field>
        <field name="arch" type="xml">
            <list>
                <field name="member_code"/>
                <field name="name"/>
                <field name="start_date"/>
            </list>
        </field>
    </record>

    <record id="view_socio_form" model="ir.ui.view">
        <field name="name">library_management.socio.form</field>
        <field name="model">library_management.socio</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="member_code" readonly="1"/>
                        <field name="name"/>
                        <field name="start_date"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_socio" model="ir.actions.act_window">
        <field name="name">Socios</field>
        <field name="res_model">library_management.socio</field>
        <field name="view_mode">list,form</field>
    </record>

